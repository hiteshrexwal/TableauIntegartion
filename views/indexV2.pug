extends layout

block extraStyles
  link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/14.0.3/nouislider.min.css")

block content
  #wrapper
    include ./includes/sidebar.pug
    #content-wrapper.d-flex.flex-column
      // Main Content
      #content
        include ./includes/topbar.pug
        .container-fluid
          #no-view.d-none
            .no-view-content No View Found in the selected workbook. Please change the workbook.
            .no-view-help *For better experience of using this app please try to add atleast one view to this workbook
          #allFilters
            .filter-label.d-none Apply Filters
            .d-flex.flex-wrap
            #slider-filters
              
          #tableauViz
          .text-center.mt-3
            button.btn.btn-outline-primary.d-none#export-pdf(type='button' onclick='exportPDF()') Export to PDF

block appScript
  script.
    var tableauBaseUrl = '#{tableauBaseUrl}'
    var siteName = '#{siteName}'
  script(src="https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/14.0.3/nouislider.js")
  script(src=`${tableauBaseUrl}/javascripts/api/tableau-2.min.js`)
  script(src="/javascripts/internal/index-v2.js")
    


