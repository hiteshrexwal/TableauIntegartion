extends layout

block content
    .container
        // Outer Row
        .row.justify-content-center.pt-5
            .col-xl-10.col-lg-12.col-md-9
                .card.o-hidden.border-0.shadow-lg.my-5
                    .card-body.p-0
                    // Nested Row within Card Body
                    .row
                        .col-lg-6.d-none.d-lg-block.bg-login-image
                        .col-lg-6
                            .p-5
                                .text-center
                                    h1.h4.text-gray-900.mb-4 Welcome Back!
                                form.user(method='POST' ,action= '/api/login/')
                                    .form-group
                                        input#exampleInputEmail.form-control.form-control-user(type='text' name="username" aria-describedby='emailHelp' placeholder='Enter Username...', onkeyup="onValueChange(this)")(class= isEmailError ? "is-invalid" : "")
                                        .invalid-feedback.ml-3 Username is Required.
                                    .form-group
                                        input#exampleInputPassword.form-control.form-control-user(type='password' name="password" placeholder='Password',  onkeyup="onValueChange(this)")(class= isPasswordError ? "is-invalid" : "")
                                        .invalid-feedback.ml-3 Password is Required.
                                    button.btn.btn-primary.btn-user.btn-block.mt-5(type="button", onclick="login()")
                                        | Login
                                    hr
                                    .text-center.mb-2 Login with tableau credentials

    script(src='/javascripts/internal/login.js')
